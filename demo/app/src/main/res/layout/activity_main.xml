<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.blankkeys.algvdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Defaults:"/>

        <co.blankkeys.animatedlinegraphview.AnimatedLineGraphView
            android:id="@+id/graph_default"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Colored:"/>

        <co.blankkeys.animatedlinegraphview.AnimatedLineGraphView
            android:id="@+id/graph_colored"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lineColor="@color/colorPrimary"
            app:circleColor="@color/colorAccent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Fast:"/>

        <co.blankkeys.animatedlinegraphview.AnimatedLineGraphView
            android:id="@+id/graph_fast"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:duration="300"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Slow:"/>

        <co.blankkeys.animatedlinegraphview.AnimatedLineGraphView
            android:id="@+id/graph_slow"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:duration="1800"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Thin:"/>

        <co.blankkeys.animatedlinegraphview.AnimatedLineGraphView
            android:id="@+id/graph_thin"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lineThickness="5"
            app:circleRadius="10"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Thick:"/>

        <co.blankkeys.animatedlinegraphview.AnimatedLineGraphView
            android:id="@+id/graph_thick"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lineThickness="40"
            app:circleRadius="50"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Padded:"/>

        <co.blankkeys.animatedlinegraphview.AnimatedLineGraphView
            android:id="@+id/graph_padded"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#efefef"
            app:paddingPercent=".2"/>

    </LinearLayout>

</ScrollView>
